/* pages/sell/sell.wxss */
@import '/lib/weui.wxss';

textarea {
  width: 700rpx;
  padding: 25rpx 0;
}

.formBackground {
  border-style: solid;
  margin-left: 25rpx;
  margin-right: 25rpx;
  border-width: 2rpx;
  border-radius: 10rpx;
}

.textarea-wrp {
  padding: 0 25rpx;
  background-color: rgb(233, 232, 232);
}

.checkbox {
  display: grid;
  grid-template-columns: 355rpx 395rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.page-section{
  width: 100%;
  margin-bottom: 30rpx;
}

.page-section:last-child{
  margin-bottom: 0;
}

.page-section-title{
  font-size: 35rpx;
  font-weight: bold;
  color: rgb(114, 114, 201);
  margin-top: 10rpx;
  margin-bottom: 5rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.images {
  display: grid;

  margin-right: 25rpx;
  margin-left: 25rpx;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(2, 20vw);
}
.gallery__img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-style: solid;
  border-width: 2rpx;
}

.yes-no {
  position: relative;
  bottom: 0;
}

.confirm {
  display: inline-block;
  background-color: white;
  color: red;
}